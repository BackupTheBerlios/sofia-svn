#------------------------------------------------------------------------------
VERSION = BWS.01
#------------------------------------------------------------------------------
!ifndef ROOT
ROOT = $(MAKEDIR)\..
!endif
#------------------------------------------------------------------------------
MAKE = $(ROOT)\bin\make.exe -$(MAKEFLAGS) -f$**
DCC = $(ROOT)\bin\dcc32.exe $**
BRCC = $(ROOT)\bin\brcc32.exe $**
#------------------------------------------------------------------------------
PROJECTS = JvUIBD7R.bpl sofia.exe contact.dll serializer.dll uibdb.dll \
  navigateur.dll
#------------------------------------------------------------------------------
default: $(PROJECTS)
#------------------------------------------------------------------------------


sofia.exe: sofia.dpr
  $(DCC)

contact.dll: plugins\contact\contact.dpr
  $(DCC)

serializer.dll: plugins\serializer\serializer.dpr
  $(DCC)

uibdb.dll: plugins\database\uibdb.dpr
  $(DCC)

navigateur.dll: plugins\navigateur\navigateur.dpr
  $(DCC)

JvUIBD7R.bpl: uib2\packages\JvUIBD7R.dpk
  $(DCC)


