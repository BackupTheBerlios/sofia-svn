#------------------------------------------------------------------------------
VERSION = BWS.01
#------------------------------------------------------------------------------
!ifndef ROOT
ROOT = $(MAKEDIR)\..
!endif
#------------------------------------------------------------------------------
MAKE = $(ROOT)\bin\make.exe -$(MAKEFLAGS) -f$**
DCC = $(ROOT)\bin\dcc32.exe $**
BRCC = $(ROOT)\bin\brcc32.exe $**
#------------------------------------------------------------------------------
PROJECTS = sofia.exe contact.dll clients.dll serializer.dll uibdb.dll
#------------------------------------------------------------------------------
default: $(PROJECTS)
#------------------------------------------------------------------------------


sofia.exe: sofia.dpr
  $(DCC)

contact.dll: plugins\contact\contact.dpr
  $(DCC)

clients.dll: plugins\clients\clients.dpr
  $(DCC)

serializer.dll: plugins\serializer\serializer.dpr
  $(DCC)

uibdb.dll: plugins\database\uibdb.dpr
  $(DCC)


