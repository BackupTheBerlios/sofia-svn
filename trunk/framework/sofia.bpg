sofia.exe: sofia.dpr
  $(DCC)

dbuib.dll: plugins\database\dbuib.dpr
  $(DCC)

JvUIBD7R.bpl: uib2\packages\JvUIBD7R.dpk
  $(DCC)

dbobj.dll: plugins\database\dbobj.dpr
  $(DCC)

search.dll: plugins\search\search.dpr
  $(DCC)

welcome.dll: plugins\welcome\welcome.dpr
  $(DCC)

contact.dll: plugins\contact\contact.dpr
  $(DCC)

display.dll: plugins\display\display.dpr
  $(DCC)


