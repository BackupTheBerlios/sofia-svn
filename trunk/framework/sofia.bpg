  $(DCC)

JvUIBD7R.bpl: uib2\packages\JvUIBD7R.dpk
  $(DCC)

dbobj.dll: plugins\database\dbobj.dpr
  $(DCC)

recherche.dll: plugins\recherche\recherche.dpr
  $(DCC)

navigateur.dll: plugins\navigateur\navigateur.dpr
  $(DCC)


