MAKE = $(ROOT)\bin\make.exe -$(MAKEFLAGS) -f$**
DCC = $(ROOT)\bin\dcc32.exe $**
BRCC = $(ROOT)\bin\brcc32.exe $**
#------------------------------------------------------------------------------
PROJECTS = JvUIBD7R.bpl sofia.exe dbuib.dll dbobj.dll display.dll welcome.dll \
  search.dll contact.dll
#------------------------------------------------------------------------------
default: $(PROJECTS)
