  $(DCC)

bo.dll: plugins\model\bo.dpr
  $(DCC)

search.dll: plugins\search\search.dpr
  $(DCC)

welcome.dll: plugins\welcome\welcome.dpr
  $(DCC)

contact.dll: plugins\contact\contact.dpr
  $(DCC)

mainview.dll: plugins\view\mainview.dpr
  $(DCC)


